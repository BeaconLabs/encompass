{
  "title": "POSTAdequaciesRequest",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Request shape for POST /api/adequacies/",
  "type": "object",
  "properties": {
    "provider_ids": {
      "description": "Provider IDs, available from POST /api/providers/",
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "providers": {
      "description": "Providers, containing id and location (lat, lon). Available from POST /api/providers/",
      "type": "array",
      "items": {
        "properties": {
          "latitude": {
            "description": "Latitude",
            "type": "float"
          },
          "longitude": {
            "description": "Longitude",
            "type": "float"
          },
          "id": {
            "description": "Unique ID for each provider/address",
            "type": "integer"
          }
        },
        "additionalProperties": false,
        "required": ["id", "latitude", "longitude"]
      }
    },
    "service_area_ids": {
      "description": "Service area IDs in the format \"state_city_zip\".\nFor example, [\"ca_san_francisco_94014\", \"ca_san_francisco_94015\"]",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "oneOf" : [
    {
        "required" : ["service_area_ids", "providers"]
    }, {
        "required" : ["service_area_ids", "provider_ids"]
    }
  ]
}
